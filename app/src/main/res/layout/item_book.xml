<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/dimen_5"
    android:layout_margin="@dimen/dimen_5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:paddingTop="@dimen/dimen_5"
        android:layout_margin="@dimen/dimen_5">

        <TextView
            android:id="@+id/tvBookName"
            style="@style/TextViewStyle18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingStart="@dimen/dimen_5"
            android:text="354asd4a54d5as" />

        <TextView
            android:id="@+id/tvBookAuthor"
            style="@style/TextViewStyle16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvBookName"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            android:paddingStart="@dimen/dimen_5"
            android:text="da5s4d53asd34"
            app:layout_constraintEnd_toStartOf="@+id/btnDeleteBook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBookName" />

        <ImageButton
            android:id="@+id/btnDeleteBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dimen_5"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_delete" />

        <ImageButton
            android:id="@+id/btnEditBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dimen_5"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_edit" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>